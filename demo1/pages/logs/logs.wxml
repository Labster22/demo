<swiper
  indicator-dots="{{indicatorDots}}"
  autoplay="{{autoplay}}"
  interval="{{interval}}"
  duration="{{duration}}"
  style="height:300px"
>
  <block wx:for="{{imgUrls}}">
    <swiper-item >
      <image src="{{item}}" class="slide-image" width="390px" height="500" />
    </swiper-item>
  </block>
</swiper>

<button bindtap="changeAutoplay">AUTO</button>
<button bindtap="changeAutoplay">更多功能，尽情期待</button>